<h1>User list</h1>
<br>
<% if @users.any? %>
  <table class="table table-striped table-hover">
    <tr>
      <th>#</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Country</th>
      <th>Post count</th>
      <th>Comment count</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.country %></td>
        <td><%= user.posts_count %></td>
        <td><%= user.comments_count %></td>
      </tr>
      <% end %>
  </table>
  <%= paginate @users %>
  <br>
<% else %>
  <h3>No users found</h3>
<% end %>